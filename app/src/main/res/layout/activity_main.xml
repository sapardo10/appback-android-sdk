<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_transalation_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_toggle_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toogle!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_transalation_example"
        app:layout_constraintStart_toStartOf="@+id/tv_transalation_example"
        app:layout_constraintTop_toBottomOf="@+id/tv_transalation_example"
        app:layout_constraintVertical_bias="0.112" />

    <Button
        android:id="@+id/btn_send_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Send log!"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/tv_toggle_example"
        app:layout_constraintStart_toStartOf="@+id/tv_toggle_example"
        app:layout_constraintTop_toBottomOf="@+id/tv_toggle_example" />

</androidx.constraintlayout.widget.ConstraintLayout>